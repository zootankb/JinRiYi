        xmlns:local="clr-namespace:JinRiYi.Page"
        mc:Ignorable="d"
        Title="项目设置" Height="450" Width="800">
    <Grid>
        <Grid Background="Green" VerticalAlignment="Top" Height="61">
            <Button Content="批量操作" HorizontalAlignment="Left" Margin="58,0,0,0" VerticalAlignment="Center" Height="40" Width="109"/>
