            <Label Content="名字：" HorizontalAlignment="Left" Margin="20,58,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <Label Content="中医推拿" HorizontalAlignment="Left" Margin="115,58,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>

            <Label Content="价格：" HorizontalAlignment="Left" Margin="20,90,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <Label Content="99￥" HorizontalAlignment="Left" Margin="115,90,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>

            <Label Content="类型：" HorizontalAlignment="Left" Margin="20,122,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <RadioButton Content="一次性" HorizontalAlignment="Left" Margin="115,122,0,0" VerticalAlignment="Top" Height="32" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
            <RadioButton Content="次卡" HorizontalAlignment="Left" Margin="205,122,0,0" VerticalAlignment="Top" Height="32" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
            <TextBox HorizontalAlignment="Left" Margin="271,122,0,0" TextWrapping="Wrap" Text="3次" VerticalAlignment="Top" Width="120" Height="32" VerticalContentAlignment="Center"/>

            <Label Content="放置平台：" HorizontalAlignment="Left" Margin="20,154,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <CheckBox Content="美团" HorizontalAlignment="Left" Margin="115,155,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <CheckBox Content="大众点评" HorizontalAlignment="Left" Margin="210,155,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <CheckBox Content="饿了吗" HorizontalAlignment="Left" Margin="305,154,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <CheckBox Content="线下" HorizontalAlignment="Left" Margin="396,154,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>

            <Label Content="服务部位：" HorizontalAlignment="Left" Margin="20,187,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <Label Content="全身" HorizontalAlignment="Left" Margin="115,187,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>

            <Label Content="服务流程：" HorizontalAlignment="Left" Margin="20,219,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>
            <Label Content="全身" HorizontalAlignment="Left" Margin="115,219,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Height="32" Width="90"/>

        </Grid>
    </Grid>
</Window>
