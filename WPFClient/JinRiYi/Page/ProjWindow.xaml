        </Grid>
        <ListBox x:Name="ProjLst" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,61,0,0" Background="Pink" HorizontalAlignment="Left" Width="182">

        </ListBox>
        <Grid Background="Gray" Margin="182,61,0,0">
            <Button Content="废弃" HorizontalAlignment="Right" Margin="0,10,164,0" VerticalAlignment="Top" Height="37" Width="77"/>
            <Button Content="启用" HorizontalAlignment="Right" Margin="0,10,82,0" VerticalAlignment="Top" Height="37" Width="77"/>
