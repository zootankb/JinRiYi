<Window x:Class="JinRiYi.Page.LineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JinRiYi.Page"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="统计窗口" Height="450" Width="800">
    <Grid>
        <lvc:CartesianChart Margin="50">
            <lvc:CartesianChart.Series>
                <lvc:LineSeries x:Name="Lvc1" Values="8,2,6,4,6" Title="消费" DataLabels="True">
                </lvc:LineSeries>
                <lvc:LineSeries x:Name="Lvc2" Values="2,4,6,8,10" Title="金额" DataLabels="True"/>
            </lvc:CartesianChart.Series>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="顾客" Labels="顾客1,顾客2,顾客3,顾客4,顾客5"/>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
    </Grid>
</Window>
