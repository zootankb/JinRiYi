<Window x:Class="JinRiYi.Page.RechargeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JinRiYi.Page"
        mc:Ignorable="d"
        Title="充值记录" Height="450" Width="800">
    <Grid>
        <Grid VerticalAlignment="Top" Height="71">
            <Button x:Name="BtnExportAll" Content="导出所有顾客充值数据"></Button>
        </Grid>
        <ListBox x:Name="LstbUsers" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,71,0,0" HorizontalAlignment="Left" Width="191" Background="Gray"/>
        <Grid Margin="191,71,0,0" Background="Pink">
            <Button Content="导出记录" HorizontalAlignment="Left" Margin="492,10,0,0" VerticalAlignment="Top" Height="40" Width="107" Click="Button_Click"/>
            <ListBox x:Name="LstbRecords" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,70,10,0"/>

        </Grid>
    </Grid>
</Window>
